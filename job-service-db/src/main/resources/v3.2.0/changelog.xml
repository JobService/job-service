<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                                       http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="create_label_table" author="Gamma Team">
        <createTable tableName="label">
            <column name="partition_id" type="VARCHAR(40)" defaultValue="default"/>
            <column name="job_id" type="VARCHAR(48)"/>
            <column name="label" type="VARCHAR(255)"/>
            <column name="value" type="VARCHAR(255)"/>
        </createTable>
        <addPrimaryKey tableName="label" columnNames="partition_id,job_id,label" schemaName="public"/>
        <addForeignKeyConstraint baseTableSchemaName="public"
                                 baseTableName="label"
                                 constraintName="fk_label_job"
                                 baseColumnNames="partition_id, job_id"
                                 referencedTableName="job"
                                 referencedColumnNames="partition_id, job_id" />
        <createIndex schemaName="public" tableName="label" indexName="idx_label" unique="false">
            <column name="job_id" />
            <column name="label"/>
            <column name="value"/>
        </createIndex>
        <addUniqueConstraint tableName="label" columnNames="partition_id,job_id,label,value"
                             schemaName="public" constraintName="UNQ_Label_1" />
    </changeSet>

    <changeSet id="update_procedures_label_filter" author="Gamma Team" runOnChange="true">
        <createProcedure schemaName="public"
                         procedureName="get_jobs"
                         path="procedures/getJobs.sql" />
        <createProcedure schemaName="public"
                         procedureName="get_job"
                         path="procedures/getJob.sql" />
        <createProcedure schemaName="public"
                         procedureName="delete_job"
                         path="procedures/deleteJob.sql" />
        <createProcedure schemaName="public"
                         procedureName="internal_create_job"
                         path="procedures/internalCreateJob.sql" />
        <createProcedure schemaName="public"
                         procedureName="create_job"
                         path="procedures/createJob.sql" />
        <createProcedure schemaName="public"
                         procedureName="create_job"
                         path="procedures/createJobForDependencies.sql" />
    </changeSet>

</databaseChangeLog>
