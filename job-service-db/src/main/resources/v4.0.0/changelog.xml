<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                                       http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    <changeSet id="create_table_delete_log" author="Gamma Team">
        <createTable tableName="delete_log">
            <column name="table_name" type="VARCHAR(63)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <createIndex schemaName="public" tableName="delete_log" indexName="idx_delete_log_table_name">
            <column name="table_name" />
        </createIndex>
    </changeSet>
    <changeSet id="create_expiration_operation_enum_type" author="Gamma Team">
        <sql>CREATE TYPE EXPIRATION_OPERATION AS ENUM('Expire', 'Delete')</sql>
    </changeSet>
    <changeSet id="create_policer_enum_type" author="Gamma Team">
        <sql>CREATE TYPE EXPIRATION_POLICER AS ENUM('User', 'System')</sql>
    </changeSet>
    <changeSet id="update_job_status_enum_type_add_expired" author="Gamma Team" runInTransaction="false">
        <sql>ALTER TYPE JOB_STATUS ADD VALUE 'Expired';</sql>
    </changeSet>
    <changeSet id="create_policy_type" author="Gamma Team">
        <sql>CREATE TYPE JOB_POLICY AS (partition_id VARCHAR(40), job_id VARCHAR(48), job_status JOB_STATUS,
            operation EXPIRATION_OPERATION, expiration_time VARCHAR(58), policer EXPIRATION_POLICER)</sql>
    </changeSet>
    <changeSet id="create_job_expiration_policy" author="Gamma Team">
        <sql>CREATE TABLE job_expiration_policy OF JOB_POLICY</sql>
    </changeSet>
    <!--<changeSet id="update_job_expiration_policy_table_add_columns_exact_expiry_time_and_last_modified_offset"
               author="Gamma Team">
        <addColumn tableName="job_expiration_policy">
            <column name="exact_expiry_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="job_expiration_policy">
            <column name="last_modified_offset" type="INTERVAL">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>-->
    <changeSet id="add_job_expiration_policy_primary_key" author="Gamma Team">
        <addPrimaryKey constraintName="pk_job_expiration_policy"
                       schemaName="public"
                       tableName="job_expiration_policy"
                       columnNames="partition_id, job_id, job_status" />
    </changeSet>
    <changeSet id="add_job_expiration_policy_foreign_key" author="Gamma Team">
        <addForeignKeyConstraint baseTableSchemaName="public"
                                 baseTableName="job_expiration_policy"
                                 constraintName="fk_expiration_policy_job"
                                 baseColumnNames="partition_id, job_id"
                                 referencedTableName="job"
                                 referencedColumnNames="partition_id, job_id" />
    </changeSet>
    <changeSet id="create_default_job_expiration_policy" author="Gamma Team">
        <createTable tableName="default_job_expiration_policy">
            <column name="job_status" type="JOB_STATUS">
                <constraints primaryKey="true"/>
            </column>
            <column name="operation" type="EXPIRATION_OPERATION">
                <constraints nullable="false"/>
            </column>
            <column name="expiration_time" type="VARCHAR(58)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="increase_task_id_size" author="Gamma Team" >
    <modifyDataType
            columnName="task_id"
            newDataType="VARCHAR(70)"
            tableName="completed_subtask_report" />
    </changeSet>
    <changeSet id="create_stowed_task_table" author="Gamma Team">
        <createTable tableName="stowed_task">
            <column name="partition_id" type="VARCHAR(40)">
                <constraints nullable="false" />
            </column>
            <column name="job_id" type="VARCHAR(48)">
                <constraints nullable="false"/>
            </column>
            <column name="task_classifier" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="task_api_version" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="task_data" type="BYTEA">
                <constraints nullable="false"/>
            </column>
            <column name="task_status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="context" type="BYTEA">
                <constraints nullable="false"/>
            </column>
            <column name="to" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="tracking_info_job_task_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="tracking_info_last_status_check_time" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="tracking_info_status_check_interval_millis" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="tracking_info_status_check_url" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="tracking_info_tracking_pipe" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="tracking_info_track_to" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="source_info" type="BYTEA">
                <constraints nullable="true"/>
            </column>
            <column name="correlation_id" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createIndex schemaName="public" tableName="stowed_task" indexName="idx_partition_id_and_job_id">
            <column name="partition_id" type="varchar(48)"/>
            <column name="job_id" type="varchar(48)"/>
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="public"
                                 baseTableName="stowed_task"
                                 constraintName="fk_stowed_task"
                                 baseColumnNames="partition_id, job_id"
                                 referencedTableName="job"
                                 referencedColumnNames="partition_id, job_id" />
    </changeSet>
</databaseChangeLog>
