<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                                       http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    <changeSet id="create_expiration_operation_enum_type" author="Gamma Team">
        <sql>CREATE TYPE EXPIRATION_OPERATION AS ENUM('Expire', 'Delete')</sql>
    </changeSet>
    <changeSet id="update_job_status_enum_type_add_expired" author="Gamma Team" runInTransaction="false">
        <sql>ALTER TYPE JOB_STATUS ADD VALUE 'Expired';</sql>
    </changeSet>
    <changeSet id="create_policy_type" author="Gamma Team">
        <sql>CREATE TYPE JOB_POLICY AS (partition_id VARCHAR(40), job_id VARCHAR(48), job_status JOB_STATUS, operation EXPIRATION_OPERATION, expiration_time VARCHAR(58))</sql>
    </changeSet>
    <changeSet id="create_job_expiration_policy" author="Gamma Team">
        <sql>CREATE TABLE job_expiration_policy OF JOB_POLICY</sql>
    </changeSet>
    <changeSet id="add_job_expiration_policy_foreign_key" author="Gamma Team">
        <addForeignKeyConstraint baseTableSchemaName="public"
                                 baseTableName="job_expiration_policy"
                                 constraintName="fk_expiration_policy_job"
                                 baseColumnNames="partition_id, job_id"
                                 referencedTableName="job"
                                 referencedColumnNames="partition_id, job_id"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>
