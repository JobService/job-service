<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.hpe.caf</groupId>
    <artifactId>job-service-ui</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>war</packaging>

    <parent>
        <groupId>com.hpe.caf</groupId>
        <artifactId>caf-maven-latest</artifactId>
        <version>1-SNAPSHOT</version>
        <relativePath>../caf-maven-latest</relativePath>
    </parent>

    <dependencies>
        <dependency>
            <groupId>com.hpe.caf</groupId>
            <artifactId>job-service-contract</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.hpe.caf</groupId>
            <artifactId>swagger-ui</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <properties>
        <finalName>${project.artifactId}</finalName>
    </properties>

    <build>
        <finalName>${finalName}</finalName>
        <plugins>
            <!-- The maven dependency plugin adds the swagger.yaml as an accessible file within the webapp war. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.hpe.caf</groupId>
                                    <artifactId>swagger-ui</artifactId>
                                    <outputDirectory>${project.build.directory}/${finalName}</outputDirectory>
                                    <excludes>**/META-INF/**</excludes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.hpe.caf</groupId>
                                    <artifactId>job-service-contract</artifactId>
                                    <outputDirectory>${project.build.directory}/swagger-contract</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Unpack dependencies keeps the internal file structure of the war file.
            We will requires the swagger.yaml file be in the api-docs folder.
            So using resources plugin to move the file to the correct location.
            This step could be avoided by putting the swagger.yaml directly in resources rather than in a package directory. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.7</version>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/${finalName}/api-docs</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/swagger-contract/com/hpe/caf/services/job</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <ciManagement>
        <system>hudson</system>
        <url>http://cafbuilder.hpswlabs.hp.com:8080/job/job-service-ui/</url>
    </ciManagement>

</project>
